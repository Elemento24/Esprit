<%- include('./partials/header') %>

<div class = 'container-fluid login'>
	
	<div class = 'text-center'>
		<h1>Login to Medium!</h1>
	</div>
	
	
	<div class="mt-4">
		<form method='POST' action='/login'>
			<div class='form-group'>
				<label for='username'>Username</label>
				<input class='form-control' id='username' type='text' name='username' placeholder='Elemento' required>
			</div>
			
			<div class='form-group'>
				<label for='image'>Password</label>
				<input class='form-control' id='password' type='password' name='password' placeholder='elemento_24' required>
			</div>
			
			<div class='form-group'>
				<a href="/forgot" class="btn btn-primary">
					Forgot Password
				</a>
				<button class='btn btn-primary float-right'>
					Login
				</button>
			</div>
		</form>
	</div>
	
</div>

